generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String     @unique
  password String
  Imobi    Imobi[]
  Messages Messages[]

}

model Imobi {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  tipo      String?
  thumb     String?
  endereco  String?
  cidade    String?
  uf        String?
  valor     String?
  descricao String? 
  name      String
  email     String
  telefone  String
  slug      String
  userId    String
  author    Users    @relation(fields: [userId], references: [id])

}

model Messages {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  client_name     String
  client_email    String
  client_mensagem String
  userId          String
  author          Users   @relation(fields: [userId], references: [id])

}
